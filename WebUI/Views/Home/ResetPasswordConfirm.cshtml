@model PasswordResetViewModel
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!Doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
</head>
<style>
    .validation-summary-errors > ul {
        list-style-type: none;
    }

    .custom {
        opacity: 0;
        position: relative;
    }

        .custom + label {
            display: -webkit-box;
            display: flex;
            -webkit-box-align: center;
            align-items: center;
            cursor: pointer;
            position: relative;
        }

        .custom[type="checkbox"] + label::before {
            content: "";
            width: 1.4em;
            height: 1.4em;
            border: 1px solid rgba(0, 0, 0, 0.2);
            margin-right: 1em;
            border-radius: 6px;
            background-color: transparent;
            -webkit-transition: background 300ms ease-in;
            transition: background 300ms ease-in;
        }

        .custom[type="checkbox"] + label::after {
            content: "\2713";
            color: white;
            position: absolute;
            left: 7px;
            -webkit-transform: scale(0);
            transform: scale(0);
            -webkit-transition: all 300ms ease-in-out;
            transition: all 300ms ease-in-out;
        }

        .custom[type="checkbox"]:checked + label::after {
            -webkit-transform: scale(1.2);
            transform: scale(1.2);
        }

        .custom[type="checkbox"]:checked + label::before {
            background-color: #55967E;
        }

    label {
        color: #555;
        font-family: 'Montserrat', sans-serif;
        font-weight: bold;
    }

    ::placeholder {
        color: #999;
        font-size: 16px;
    }

    .alert {
  padding: 20px;
  background-color: #55967e; /* Red */
  color: white;
  margin-bottom: 15px;
}

/* The close button */
.closebtn {
  margin-left: 15px;
  color: white;
  font-weight: bold;
  float: right;
  font-size: 22px;
  line-height: 20px;
  cursor: pointer;
  transition: 0.3s;
}

/* When moving the mouse over the close button */
    .closebtn:hover {
        color: black;
    }
</style>


<body>
    <div class="container">
        <div class="img">
            <img src="~/img/book2.svg" />
        </div>
        <div class="login-container">
            <form asp-action="ResetPasswordConfirm" method="post">
                <img class="logo" src="~/img/logo.svg" />
                <h2>Şifre Yenileme</h2>

                <span asp-validation-for="PasswordNew" style="color:#55967E"></span>
                <div class="input-div two">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>

                    <div>

                        <input placeholder="Şifre :" class="input" asp-for="PasswordNew" />
                    </div>

                </div>

                <div asp-validation-summary="ModelOnly" style="color: #55967e; margin-top: 5%; margin-bottom: 5%;">

                </div>

                @if (ViewBag.Status == "success")
                {
                    <div class="alert">
                        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                        Şifreniz başarılı bir şekilde güncellenmiştir giriş yapabilirsiniz.
                    </div>
                }

                <input type="submit" class="btn" value="Yeni şifre oluştur" />

                @if (ViewBag.Status == "success")
                {
                    <a style="display:flex;justify-content:center;align-items:center;" asp-action="Index" asp-controller="Home" class="btn">Giriş Yap</a>
                }
            </form>

        </div>
    </div>
    <script src="https://kit.fontawesome.com/70e637288c.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>

</body>

</html>




